<h1>Burgers!</h1>

<h2>Burgers that have not been eaten!</h2>

<ul>
    {{#each burgers}}
        {{#unless this.devoured}}
            <li>
                {{this.burger_name}}

                <form class="" action="burgers/update/{{this.id}}?_method=PUT" method="POST">
                    <input type="hidden" name="devoured" value="true">
                    <button type="submit">EAT!</button>
                </form>
            </li>
        {{/unless}}
    {{/each}}
</ul>

<h2>Burgers that have been eaten!</h2>

<ul>
    {{#each burgers}}
        {{#if this.devoured}}
            <li>
                {{this.burger_name}}

                <form class="" action="burgers/update/{{this.id}}?_method=PUT" method="POST">
                    <input type="hidden" name="devoured" value="false">
                    <button type="submit">Remake</button>
                </form>
            </li>
        {{/if}}
    {{/each}}
</ul>

<h2>Add a burger</h2>
<form class="create-update-form" action="burgers/create" method="POST">
    <div class="form-group">
        <label for="bn">Burger Name:</label>
        <input type="text" id="bn" name="name">
    </div>

    <div class="form-group">
        <label for="eat">Eat Immediately?</label>
        <input type="radio" name="eat" value="1" checked> Eat right away!
        <input type="radio" name="eat" value="0"> Save for later
    </div>

    <button type="submit">Add Burger</button>
</form>
